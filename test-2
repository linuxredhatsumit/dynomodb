apiVersion: networking.istio.io/v1alpha3
kind: VirtualService
metadata:
  name: {{ .Chart.Name }}
  namespace: {{ .Values.namespace }}
spec:
  gateways:
  - {{ .Values.gateways.gateway }}
  hosts:
  - "apy.kotak811.com"
  - "apy.kotak811.bank.in"
  http:
  - match:
    - uri:
        prefix: {{ .Values.gateways.prefix }}
    route:
    - destination:
        host: {{ .Values.service.name }}
        port:
          number: {{ .Values.gateways.internalPort }}
      weight: {{ .Values.gateways.weightvalue }}
      headers:
        response:
          add:
            Content-Security-Policy: "default-src 'none'"
            Cache-Control: "no-store"
            Access-Control-Allow-Origin: "https://apy.kotak811.bank.in, https://apy.kotak811.com"
          remove:
          - Server