#!/bin/bash

> global_tables_with_ap_south_2.txt  # Clear output file

for table in $(aws dynamodb list-tables \
  --region ap-south-1 \
  --no-verify-ssl \
  --output text \
  --query "TableNames[]"); do

  aws dynamodb describe-table \
    --region ap-south-1 \
    --no-verify-ssl \
    --table-name "$table" \
    --query "Table.Replicas[*].RegionName" \
    --output text | grep -q "ap-south-2" && echo "$table" >> global_tables_with_ap_south_2.txt
done