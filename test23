#!/bin/bash

input_file="global_tables_with_ap_south_2.txt"

while read -r table; do
  echo "ğŸ—‘ï¸ Removing ap-south-2 replica from table: $table"

  aws dynamodb update-table \
    --table-name "$table" \
    --region ap-south-1 \
    --no-verify-ssl \
    --cli-input-json "{
      \"ReplicaUpdates\": [
        {
          \"Delete\": {
            \"RegionName\": \"ap-south-2\"
          }
        }
      ]
    }" && echo "âœ… Deleted replica for $table" || echo "âŒ Failed for $table"

done < "$input_file"